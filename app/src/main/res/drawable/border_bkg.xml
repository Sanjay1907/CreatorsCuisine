<!-- edit_text_bg.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/colorAccent" /> <!-- Border color when focused (colorAccent) -->
            <corners android:radius="12dp" /> <!-- Border radius of 12dp -->
        </shape>
    </item>

    <!-- Default state (not focused) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/lightprimary" /> <!-- Default border color (black) -->
            <corners android:radius="12dp" /> <!-- Border radius of 12dp -->
        </shape>
    </item>
</selector>
