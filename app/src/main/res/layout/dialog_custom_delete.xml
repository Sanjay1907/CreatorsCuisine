<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogCustomDelete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/deleteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Recommendation"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_top_yellow_bg"
        android:padding="10dp"
        android:drawableLeft="@drawable/baseline_delete_24"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/deleteMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete this recommendation?"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/deleteTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/btnCancelDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnConfirmDelete"
        app:layout_constraintTop_toBottomOf="@id/deleteMessage"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/btnConfirmDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/red"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@id/btnCancelDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deleteMessage"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
